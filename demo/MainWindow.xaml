<Window x:Class="demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ew="clr-namespace:ExtendedWindow;assembly=ExtendedWindow"
        xmlns:local="clr-namespace:demo"
        mc:Ignorable="d"
        Title="MainWindow" 
                   Height="450" 
                   Width="800"
        Style="{StaticResource Style.Window.Universal}">

    <ew:UniversalWindowStyle.TitleBar>
        <ew:UniversalTitleBar ForegroundColor="Black" InactiveForegroundColor="#7FFFFFFF"
                                  ButtonHoverForeground="Black" ButtonHoverBackground="LightGray"
                                  ButtonPressedForeground="#7FFFFFFF" ButtonPressedBackground="#3F000000" />
    </ew:UniversalWindowStyle.TitleBar>

    <Grid Margin="0 32 0 0" Background="DodgerBlue">
        <TextBlock Text="123" />
    </Grid>
</Window>
